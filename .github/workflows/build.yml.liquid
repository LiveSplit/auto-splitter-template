name: Build

on:
  pull_request:
  push:
    branches:
      - 'master'
    tags:
      - '*'

jobs:
  build:
    name: Build
    runs-on: ubuntu-latest
    permissions: 
      contents: write
    steps:
      - name: Checkout Commit
        uses: actions/checkout@v3

      - name: Install Rust
        uses: hecrj/setup-rust-action@v1
        with:{% if toolchain == "nightly" %}
          components: rust-src{% endif %}
          rust-version: {{toolchain}}
          targets: {% if use_wasi %}wasm32-wasi{% else %}wasm32-unknown-unknown{% endif %}

      - name: Build
        run: |
          cargo b --release --locked

      - name: Release
        if: github.ref == 'refs/heads/master'
        uses: softprops/action-gh-release@v1
        with:
          files: target/{% if use_wasi %}wasm32-wasi{% else %}wasm32-unknown-unknown{% endif %}/release/{{project-name | replace: "-", "_" }}.wasm
          name: Latest
          tag_name: latest
          body: This contains the latest version of the auto splitter.

  clippy:
    name: Check clippy lints
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Commit
        uses: actions/checkout@v3

      - name: Install Rust
        uses: hecrj/setup-rust-action@v1
        with:
          components: clippy
          targets: {% if use_wasi %}wasm32-wasi{% else %}wasm32-unknown-unknown{% endif %}

      - name: Run Clippy
        run: cargo clippy --all-features

  format:
    name: Check formatting
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Commit
        uses: actions/checkout@v3

      - name: Install Rust
        uses: hecrj/setup-rust-action@v1
        with:
          components: rustfmt

      - name: Run cargo fmt
        run: cargo fmt -- --check || true
